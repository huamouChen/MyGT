<?xml version="1.0" encoding="utf-8"?>
<com.example.huamouchen.mygt.widgets.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.example.huamouchen.mygt.widgets.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_heightPercent="12.5%h">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have completed 21/40 visits for stores"
            app:layout_marginLeftPercent="12.5%w"
            app:layout_marginTopPercent="2%w"
            app:layout_textSizePercent="1.5%w" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_1"
            android:layout_below="@id/tv_1"
            android:text="with average 1.8 hour/store."
            app:layout_paddingBottomPercent="2%h"
            app:layout_paddingTopPercent="2%h"
            app:layout_textSizePercent="1.5%w" />


        <View
            android:id="@+id/v_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary"
            app:layout_heightPercent="96%h"
            app:layout_marginLeftPercent="75%w"
            app:layout_marginRightPercent="2%w"
            app:layout_marginTopPercent="1.5%w"
            app:layout_widthPercent="96%h" />


        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_1"
            android:layout_toEndOf="@id/v_1"
            android:text="Rank #5"
            android:textColor="@color/colorPrimary"
            app:layout_marginRightPercent="0.5%w"
            app:layout_textSizePercent="1.3%w" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_3"
            android:layout_toEndOf="@id/tv_3"
            android:text="in channel"
            app:layout_textSizePercent="1.3%w" />

        <TextView
            android:id="@+id/tv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_3"
            android:layout_alignTop="@id/tv_2"
            android:text="53"
            android:textColor="@color/colorPrimary"
            app:layout_marginRightPercent="0.5%w"
            app:layout_textSizePercent="1.3%w" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_4"
            android:layout_toEndOf="@id/tv_4"
            android:text="likes for stores"
            app:layout_textSizePercent="1.3%w" />

    </com.example.huamouchen.mygt.widgets.PercentRelativeLayout>


    <com.example.huamouchen.mygt.widgets.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"/>

        <View
            android:id="@+id/v_offtake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:layout_heightPercent="18.8%w"
            app:layout_marginLeftPercent="12.5%w"
            app:layout_marginTopPercent="5%h"
            app:layout_widthPercent="18.8%w" />

        <View
            android:id="@+id/v_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/v_offtake"
            android:layout_toEndOf="@id/v_offtake"
            android:background="@color/colorPrimary"
            app:layout_heightPercent="18.8%w"
            app:layout_marginLeftPercent="10%w"
            app:layout_widthPercent="18.8%w" />

        <View
            android:id="@+id/v_psku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/v_task"
            android:layout_toEndOf="@+id/v_task"
            android:background="@color/colorPrimary"
            app:layout_heightPercent="18.8%w"
            app:layout_marginLeftPercent="10%w"
            app:layout_widthPercent="18.8%w" />


        <View
            android:id="@+id/v_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/v_offtake"
            android:layout_below="@id/v_offtake"
            android:background="@color/colorPrimary"
            app:layout_heightPercent="18.8%w"
            app:layout_marginTopPercent="10%h"
            app:layout_widthPercent="18.8%w" />

        <View
            android:id="@+id/v_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/v_task"
            android:layout_alignTop="@id/v_star"
            android:background="@color/colorPrimary"
            app:layout_heightPercent="18.8%w"
            app:layout_widthPercent="18.8%w" />

        <View
            android:id="@+id/v_shelf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/v_psku"
            android:layout_alignTop="@+id/v_display"
            android:background="@color/colorPrimary"
            app:layout_heightPercent="18.8%w"
            app:layout_widthPercent="18.8%w" />


    </com.example.huamouchen.mygt.widgets.PercentRelativeLayout>




</com.example.huamouchen.mygt.widgets.PercentLinearLayout>