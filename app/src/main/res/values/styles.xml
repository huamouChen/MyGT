<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Widget.Design.AppBarLayout" parent="android:Widget">
        <item name="elevation">0dp</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--tab bar style-->
    <style name="tabBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textColor">@color/cb_blue_text_selector</item>
        <item name="android:background">@drawable/tab_main_selector</item>
        <item name="layout_drawableSizePercent">6%h</item>
        <item name="layout_textSizePercent">12%w</item>
        <item name="layout_paddingBottomPercent">0.3%w</item>
        <item name="layout_paddingTopPercent">1%w</item>
        <item name="layout_marginLeftPercent">5%w</item>
        <item name="layout_heightPercent">12.5%h</item>
        <item name="layout_widthPercent">100%w</item>
    </style>


</resources>
